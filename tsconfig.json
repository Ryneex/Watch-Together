{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "build"
    },
    "include": ["src"],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
